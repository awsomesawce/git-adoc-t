# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{asc,adoc,asciidoc,md,markdown}]
insert_final_newline = true
indent_size = 2
trim_trailing_whitespace = true

[*.{sh,zsh,fish,bash}]
indent_size = 2
indent_style = space
end_of_line = lf


[*.{ps1,psm1,psd1}]
end_of_line = crlf
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8